<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/includetitle1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/forgetpasswordactivity_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="输入注册的手机号码"
            android:padding="5dp"
            android:singleLine="true"
            android:src="@drawable/appicon"
            android:textColorHint="@color/gray9" />

        <ImageButton
            android:id="@+id/forgetpasswordactivity_phoneclear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/edittext_clear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/forgetpasswordactivity_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f1f0f0"
            android:hint="短信验证码"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/gray9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/forgetpasswordactivity_vercode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#c9c9c9"
            android:padding="5dp"
            android:text="点击发送验证码"
            android:textColor="@color/gray3"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/forgetpasswordactivity_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_back_two_selector"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="@drawable/button_textcolor_one_selector"
        android:textSize="15sp" />

</LinearLayout>