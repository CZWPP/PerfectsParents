<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/includetitle1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textColor="@color/gray3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/registeractivity_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="设置您的昵称"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:src="@drawable/appicon"
                    android:textColorHint="@color/gray9" />

                <ImageButton
                    android:id="@+id/registeractivity_nicknameclear"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/edittext_clear" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/registeractivity_userpic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/appicon" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号:"
                android:textColor="@color/gray3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/registeractivity_phone"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="您的手机号码"
                android:padding="5dp"
                android:singleLine="true"
                android:src="@drawable/appicon"
                android:textColorHint="@color/gray9" />

            <ImageButton
                android:id="@+id/registeractivity_phoneclear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/edittext_clear" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/registeractivity_code"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f1f0f0"
                android:hint="短信验证码"
                android:padding="5dp"
                android:singleLine="true"
                android:textColorHint="@color/gray9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/registeractivity_vercode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#c9c9c9"
                android:padding="5dp"
                android:text="点击发送验证码"
                android:textColor="@color/gray3"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textColor="@color/gray3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/registeractivity_pwd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="填写密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:src="@drawable/appicon"
                android:textColorHint="@color/gray9" />

            <ImageButton
                android:id="@+id/registeractivity_pwdshow"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/passwordshow" />

            <ImageButton
                android:id="@+id/registeractivity_pwdclear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/edittext_clear" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:textColor="@color/gray3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/registeractivity_pwdagain"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="再次填写密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:src="@drawable/appicon"
                android:textColorHint="@color/gray9" />

            <ImageButton
                android:id="@+id/registeractivity_pwdagainshow"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/passwordshow" />

            <ImageButton
                android:id="@+id/registeractivity_pwdagainclear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/edittext_clear" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#cccccc" />

        <Button
            android:id="@+id/registeractivity_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_back_two_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="下一步"
            android:textColor="@drawable/button_textcolor_one_selector"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击“注册”按钮即表示你同意"
                android:textColor="@color/gray6" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="《完美家长软件许可及用户协议》"
                android:textColor="@color/orangeju" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>