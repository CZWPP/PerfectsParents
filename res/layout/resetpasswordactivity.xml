<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/includetitle1" />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="35dp"
	    android:text="账号：XXXXXXXXXXX"
	    android:textSize="16sp"
	    android:textColor="@color/gray3"
	    android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textColor="@color/gray3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/resetpasswordactivity_pwd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="填写密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:src="@drawable/appicon"
                android:textColorHint="@color/gray9" />

            <ImageButton
                android:id="@+id/resetpasswordactivity_pwdshow"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/passwordshow" />

            <ImageButton
                android:id="@+id/resetpasswordactivity_pwdclear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/edittext_clear" />
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:textColor="@color/gray3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/resetpasswordactivity_pwdagain"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="再次填写密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:src="@drawable/appicon"
                android:textColorHint="@color/gray9" />

            <ImageButton
                android:id="@+id/resetpasswordactivity_pwdagainshow"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/passwordshow" />

            <ImageButton
                android:id="@+id/resetpasswordactivity_pwdagainclear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/edittext_clear" />
        </LinearLayout>

    <Button
        android:id="@+id/resetpasswordactivity_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_back_two_selector"
        android:padding="10dp"
        android:text="提 交"
        android:textColor="@drawable/button_textcolor_one_selector"
        android:textSize="15sp" />

</LinearLayout>